generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum SensoryLevel {
  VERY_LOW
  LOW
  MEDIUM
  HIGH
  VERY_HIGH
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
}

enum SubmissionType {
  NEW_VENUE
  EDIT_VENUE
}

model Venue {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  website     String?
  phone       String?

  address1    String?
  address2    String?
  city        String?
  postcode    String?
  county      String?
  country     String   @default("UK")

  lat         Float?
  lng         Float?
  geohash     String?

  tags        String[] // keep for MVP, but enforce in code

  coverImageUrl String?

  // “trust + confidence” (great for list sorting)
  confidenceScore Int?     // 0-100
  reviewCount     Int      @default(0)
  lastReviewedAt  DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  verifiedAt  DateTime?
  archivedAt DateTime?

  sensory     SensoryProfile?
  facilities  Facilities?

  submissions VenueSubmission[]
  reviews     Review[]

  @@index([city])
  @@index([postcode])
  @@index([geohash])
}

model SensoryProfile {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  venueId      String @unique @db.ObjectId
  venue        Venue  @relation(fields: [venueId], references: [id])

  noiseLevel   SensoryLevel?
  lighting     SensoryLevel?
  crowding     SensoryLevel?

  quietSpace   Boolean?
  sensoryHours Boolean?
  notes        String?
}

model Facilities {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  venueId          String @unique @db.ObjectId
  venue            Venue  @relation(fields: [venueId], references: [id])

  parking          Boolean?
  accessibleToilet Boolean?
  babyChange       Boolean?
  wheelchairAccess Boolean?
  staffTrained     Boolean?
  notes            String?
}

model Review {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  venueId       String   @db.ObjectId
  venue         Venue    @relation(fields: [venueId], references: [id])

  // optional “who” (you can add auth later)
  authorName    String?
  authorId      String?

  rating        Int      // 1-5
  title         String?
  content       String?
  visitTimeHint String?

  // sensory-specific signals (this is the gold)
  noiseLevel    SensoryLevel?
  lighting      SensoryLevel?
  crowding      SensoryLevel?
  quietSpace    Boolean?
  sensoryHours  Boolean?

  createdAt     DateTime @default(now())

  @@index([venueId])
  @@index([createdAt])
}

model VenueSubmission {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId

  type         SubmissionType @default(NEW_VENUE)

  venueId      String?  @db.ObjectId
  venue        Venue?   @relation(fields: [venueId], references: [id])

  status       SubmissionStatus @default(PENDING)

  submittedBy  String?
  proposedName String?
  payload      Json

  reviewedAt   DateTime?
  reviewedBy   String?
  rejectionReason String?

  createdAt    DateTime @default(now())

  @@index([status])
  @@index([type])
}
