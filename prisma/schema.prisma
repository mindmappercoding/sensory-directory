generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum SensoryLevel {
  VERY_LOW
  LOW
  MEDIUM
  HIGH
  VERY_HIGH
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
}

enum SubmissionType {
  NEW_VENUE
  EDIT_VENUE
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?  @unique
  emailVerified DateTime?
  image         String?
  role          UserRole @default(USER)

  accounts      Account[]
  sessions      Session[]
  reviews       Review[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String

  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model Venue {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  website     String?
  phone       String?

  address1    String?
  address2    String?
  city        String?
  postcode    String?
  county      String?
  country     String   @default("UK")

  lat         Float?
  lng         Float?
  geohash     String?

  tags        String[] // keep for MVP, but enforce in code

  coverImageUrl String?
  imageUrls     String[]

  confidenceScore Int?
  reviewCount     Int      @default(0)
  lastReviewedAt  DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  verifiedAt  DateTime?
  archivedAt  DateTime?

  sensory     SensoryProfile?
  facilities  Facilities?

  submissions VenueSubmission[]
  reviews     Review[]

  @@index([city])
  @@index([postcode])
  @@index([geohash])
}

model SensoryProfile {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  venueId      String @unique @db.ObjectId
  venue        Venue  @relation(fields: [venueId], references: [id])

  noiseLevel   SensoryLevel?
  lighting     SensoryLevel?
  crowding     SensoryLevel?

  quietSpace   Boolean?
  sensoryHours Boolean?
  notes        String?
}

model Facilities {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  venueId          String @unique @db.ObjectId
  venue            Venue  @relation(fields: [venueId], references: [id])

  parking          Boolean?
  accessibleToilet Boolean?
  babyChange       Boolean?
  wheelchairAccess Boolean?
  staffTrained     Boolean?
  notes            String?
}

model Review {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId

  venueId       String   @db.ObjectId
  venue         Venue    @relation(fields: [venueId], references: [id])

  // ✅ require auth
  authorId      String   @db.ObjectId
  author        User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  authorName    String?  // optional (can store snapshot of name)

  rating        Int      // 1-5
  title         String?
  content       String?
  visitTimeHint String?

  noiseLevel    SensoryLevel?
  lighting      SensoryLevel?
  crowding      SensoryLevel?
  quietSpace    Boolean?
  sensoryHours  Boolean?

  createdAt     DateTime @default(now())

  @@index([venueId])
  @@index([authorId])
  @@index([createdAt])

  // ✅ 1 review per user per venue
  @@unique([venueId, authorId])
}

model VenueSubmission {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId

  type         SubmissionType @default(NEW_VENUE)

  venueId      String?  @db.ObjectId
  venue        Venue?   @relation(fields: [venueId], references: [id])

  status       SubmissionStatus @default(PENDING)

  submittedBy  String?
  proposedName String?
  payload      Json

  reviewedAt   DateTime?
  reviewedBy   String?
  rejectionReason String?

  createdAt    DateTime @default(now())

  @@index([status])
  @@index([type])
}
